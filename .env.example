# DigitalOcean Configuration
DO_API_TOKEN=your_digitalocean_api_token_here
GRADIENT_AI_ENDPOINT=https://api.digitalocean.com/v2/ai
GRADIENT_AI_API_KEY=your_gradient_ai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/osint_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# GitHub API
GITHUB_TOKEN=your_github_personal_access_token_here

# News API
NEWS_API_KEY=your_news_api_key_here

# RSS Feed Configuration
RSS_UPDATE_INTERVAL=600  # seconds

# Application Settings
APP_NAME=OSInt-AI
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Data Collection
MAX_REPOSITORIES_PER_USER=100
MAX_RSS_FEEDS_PER_USER=50
COLLECTION_INTERVAL=300  # seconds

# AI Analysis Configuration
AI_MODEL=meta-llama/Llama-3.1-70B-Instruct
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
ANALYSIS_BATCH_SIZE=10

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
